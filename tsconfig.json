{
  "compilerOptions": {
    "outDir": "./extension/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es6",
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    // "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "./typings",
      "node_modules/@types"
    ],
    "types": [
      "chrome",
      "jquery",
      "jqueryui",
      "lodash",
      "moment",
      "moment-timezone",
      "node",
      "sortablejs"
    ],
    "strict": true
  },
  "include": [
    "src/**/*",
    "typings/**.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
